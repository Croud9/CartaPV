<%= render "map" %>
<div class="form_radio_group" id="map_styles" style="display: none;">
    <div class="form_radio_group-item">
        <%= radio_button_tag('style_map', 'satellite', true) %>
        <%= label_tag(:style_map_satellite, "Спутник") %>
    </div>
    <div class="form_radio_group-item">
        <%= radio_button_tag('style_map', 'streets', false) %>
        <%= label_tag(:style_map_streets, "Стандарт") %>
    </div>
    <div class="form_radio_group-item">
        <%= radio_button_tag('style_map', 'outdoors', false) %>
        <%= label_tag(:style_map_outdoors, "Рельеф") %>
    </div>
</div>