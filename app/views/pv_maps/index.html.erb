<header>
    <div>
        <h2>CARTA PV </h2>
    </div>
    <div class="head-options">
        <%# <a href="" ><img src="https://cdn-icons-png.flaticon.com/512/56/56763.png" class="icon-header"></a>
        <a href="" ><img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" class="icon-header"></a>  %>
    </div>
</header>
<div class="main">
    <!-- <div id="distance" class="distance-container"></div> -->
    <div id="map">
        <div id="btn-config-show"><%=image_tag("config_icon.png", class: "icon")%></div>
        <div id="btn-draw-area"><%=image_tag("area_icon.png", class: "icon-draw")%></div>
        <div id="btn-draw-pv"><%=image_tag("pv_icon.png", class: "icon-draw")%></div>
        
        <div class="container-config hideToUser" id="config">
            <div id="btn-config-hide"><%=image_tag("close_icon.png", class: "icon")%></div>
            <form class="form" id="data">
                <h3>Конфигурация площадки</h3>
                <label>
                    Расстояние от границ участка до ограждения, м
                    <input type="number" name="distance-to-barrier" value="20" required>
                </label>
                <label>
                    Расстояние от ограждения до полезной площади, м:
                    <input type="number" name="distance-to-pv-area" value="20" required>
                </label>
                <div class="calculation-box">
                    <div id="calculated-area"></div>
                </div>    
                <h3>Конфигурация опорной конструкции</h3>
                <label for="name-module">
                    Название модуля
                    <select name="name-module" required>
                        <option value="engineer" selected>AST-250Multi-4BB</option>
                        <option value="scientist">Jinco</option>
                        <option value="psychologist">Solar System</option>
                        <option value="other">Другое</option>
                    </select>
                </label>
                <label>
                    Количество рядов
                    <input type="number" id="count-column-pv" name="count-column-pv" value="1" min="1">
                </label>
                <label>
                    Количество модулей в ряду
                    <input type="number" id="count-row-pv" name="count-row-pv" value="1" min="1">
                </label>
                <label>
                    Отступ между модулями, см
                    <input type="number" id="offset-pv" name="offset-pv" value="2">
                </label>
                <label>
                    <p>Ориентация</p> 
                    <div class="form_radio_group">
                        <div class="form_radio_group-item">
                            <input type="radio" id="orient-v" name="orientation" value="vertical" checked>
                            <label for="orient-v">Книжная</label>
                        </div>
                        <div class="form_radio_group-item">
                            <input type="radio" id="orient-h" name="orientation" value="horizontal">
                            <label for="orient-h">Альбомная</label>
                        </div>
                    </div>
                </label>
                <label>
                    <p>Тип стола</p> 
                    <div class="form_radio_group">
                        <div class="form_radio_group-item">
                            <input type="radio" id="type-table1" name="type-table" value="tracker" checked>
                            <label for="type-table1">Трекер</label>
                        </div>
                        <div class="form_radio_group-item">
                            <input type="radio" id="type-table2" name="type-table" value="fix">
                            <label for="type-table2">Фикс</label>
                        </div>
                    </div>
                </label>
                <label id="angle-fix" style="display: none;">
                    Угол наклона
                    <div>
                        <input type="range" value="0" min="0" max="60" name="angle-fix" oninput="rangevalue.value=value"/>
                        <output id="rangevalue">0</output>
                    </div>
                </label>
                <div class="btn" id="btn-svg-area-show"> Показать стол</div>
                
                <h3>Конфигурация размещения</h3>
                <label>
                    Шаг, м
                    <input type="number" name="height-offset-tables"  value="10" required>
                </label>
                <label>
                    Расстояние между столами, см
                    <input type="number" name="width-offset-tables" value="20" required>
                </label>
                <label>
                    <p>Выравнивание столов относительно границ площадки</p> 
                    <div class="form_radio_group">
                        <div class="form_radio_group-item">
                            <input type="radio" id="left" name="align-tables" value="left" >
                            <label for="left">Левая граница</label>
                        </div>
                        <div class="form_radio_group-item">
                            <input type="radio" id="center" name="align-tables" value="center" checked>
                            <label for="center">Центр</label>
                        </div>
                        <div class="form_radio_group-item">
                            <input type="radio" id="right" name="align-tables" value="right">
                            <label for="right">Правая граница</label>
                        </div>
                    </div>
                <label>
                <label>
                    Угол поворота столов относительно азимута
                    <div>
                        <input type="range" value="0" min="0" max="180" name="angle-from-azimut" id="angle-from-azimut" oninput="rangevalue2.value=value"/>
                        <output id="rangevalue2">0</output>
                    </div>
                </label>
                <label >
                    Слои:
                    <div class="column-group">
                        <div class="row-group">
                            <label class="toggler-wrapper">
                                <input type="checkbox" id="check-visible-border-lines">
                                <div class="toggler-slider">
                                    <div class="toggler-knob"></div>
                                </div>
                            </label>
                            <label class="checkbox-title">Рамка столов</label>
                        </div>
                        <div class="row-group">
                            <label class="toggler-wrapper">
                                <input type="checkbox" id="check-visible-dash-lines" checked>
                                <div class="toggler-slider">
                                    <div class="toggler-knob"></div>
                                </div>
                            </label>
                            <label class="checkbox-title">ФЭМ</label>
                        </div>
                        <div class="row-group">
                            <label class="toggler-wrapper">
                                <input type="checkbox" id="check-visible-pv-polygons" checked>
                                <div class="toggler-slider">
                                    <div class="toggler-knob"></div>
                                </div>
                            </label>
                            <label class="checkbox-title">Столы</label>
                        </div>
                    </div>
                </label>
                <button type="submit" class="btn">Сохранить</button>
            </form>
        </div>
        <div class="container-svg" id="svg-area" style="display: none;">
            <svg id="svg" ></svg>
        </div>
    </div>
    <div class="container-result">
        <h2>Отчет</h2>
        <form class="form" id="data-set-pv">
            <div class="form-row">
                <label>
                    Параметр
                    <input type="text" required>
                </label>
            </div>
            <button type="submit" class="btn">Сформировать</button>
        </form>
    </div>
</div>
<footer>
    <h2>Contacts</h2>
</footer>
