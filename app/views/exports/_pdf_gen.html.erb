<div class="createAccount_wrapper">
  <div class="container">
    <%= form_tag(export_pdf_path(format: :pdf), 
                  method: "get", 
                  target: '_blank', 
                  id: "form_pdf", 
                  class: 'createAccount',
                  style: "display: none"
                ) do %>
      <div class="createAccount_inner">
      <h3>PDF</h3>

        <div class="form_label">
          <span class="form_text">Проекты</span>
          <%= select_tag "select_project_pdf", 
              options_from_collection_for_select(@projects, :id, :title), 
              prompt: '',
              required: true,
              class: "field_one_select",
              style: "@media (min-width: 768px) { height: calc(4 * 38px)}"
          %>
          <span class="error_text"></span>
        </div>     
        
        <div class="form_label">
          <span class="form_text">Конфигурации</span>
          <div class="multiselect_block">
            <label for="select_config_pdf" class="field_multiselect"></label>

            <input id="checkbox-2" class="multiselect_checkbox" type="checkbox">
            <label for="checkbox-2" class="multiselect_label"></label>

            <%= select_tag "select_config_pdf", 
                options_from_collection_for_select(@area_configs, :id, :title), 
                # placeholder: 'Выберите',
                multiple: true,
                required: true,
                class: "field_select",
                style: "@media (min-width: 768px) { height: calc(4 * 38px)}"
            %>
            <%# <span class="field_multiselect_help">You can select several items by pressing <b>Ctrl(or Command)+Element</b></span> %>
          </div>
          <span class="error_text"></span>
        </div>
        

        <span class="form_text">Опции</span>
        <label class="createAccount_policy">
          <input class="input_checkbox policy_checkbox" id="policy" type="checkbox">
          <span class="input_checkbox__decor">Скачать планы</span>
        </label>

        <div class="form_radio_group" id="not_map_styles">
            <div class="form_radio_group-item">
                <%= radio_button_tag('style_not_map', 'satellite', true) %>
                <%= label_tag(:style_not_map_satellite, "Спутник") %>
            </div>
            <div class="form_radio_group-item">
                <%= radio_button_tag('style_not_map', 'outdoors', false) %>
                <%= label_tag(:style_not_map_outdoors, "Рельеф") %>
            </div>
        </div>

        
        <div class="createAccount_buttons">
          <button class="btn btn_createAccount" type="submit" disabled>Сгенерировать</button>
          <%# <button class="btn btn-empty  btn_backStep1" type="button">back</button> %>
          <%= submit_tag "PDF", id: "btn_pdf", class: "btn btn-empty  btn_backStep1"%>
        </div>
        
      </div>
    <% end %>
  </div>
</div>
