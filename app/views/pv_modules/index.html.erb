<h2>Фотоэлектрические модули</h2>
<%= form_tag import_pv_modules_path, :multipart => true do %>
   <%# <label for="file">Загрузить файл модуля</label>  %>
   <%= file_field_tag "file", accept: ".PAN" %>
   <%= submit_tag "Обработать" %>
<% end %>

<% flash.each do |flash_type, message| %>
  <div class="flash__message">
    <%= message %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Производитель</th>
      <th>Модель</th>
      <th>Ширина, м</th>
      <th>Высота, м</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pv_modules.each do |pv_module| %>
      <tr>
        <td><%= pv_module.manufacturer %></td>
        <td><%= pv_module.model %></td>
        <td><%= pv_module.width %></td>
        <td><%= pv_module.height %></td>
        <td><%= link_to 'Изменить', pv_module %> | <%= link_to 'Удалить', pv_module %></td>
      </tr>
    <% end %>
  </tbody>
</table>